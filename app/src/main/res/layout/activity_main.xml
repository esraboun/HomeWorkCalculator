<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F72E2A26"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/division"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="63dp"

        android:onClick="divide"
        android:text="/"
        android:textColor="#13005A"
        app:backgroundTint="#03C988"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subtraction"
        app:layout_constraintTop_toBottomOf="@+id/input2" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"

        android:onClick="subtract"
        android:text="-"
        android:textColor="#13005A"
        app:backgroundTint="#03C988"
        app:layout_constraintEnd_toStartOf="@+id/division"
        app:layout_constraintStart_toEndOf="@+id/addition"
        app:layout_constraintTop_toBottomOf="@+id/input2" />

    <Button
        android:id="@+id/addition"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"

        android:onClick="add"
        android:text="+"
        android:textColor="#13005A"
        app:backgroundTint="#03C988"
        app:layout_constraintEnd_toStartOf="@+id/subtraction"
        app:layout_constraintStart_toEndOf="@+id/multiplication"
        app:layout_constraintTop_toBottomOf="@+id/input2" />

    <Button
        android:id="@+id/multiplication"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"

        android:onClick="multiply"
        android:text="*"
        android:textColor="#13005A"
        app:backgroundTint="#03C988"
        app:layout_constraintEnd_toStartOf="@+id/addition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input2" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="207dp"
        android:layout_height="59dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="102dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#03C988"
        android:gravity="center"/>

    <TextView
        android:id="@+id/Result"
        android:layout_width="300dp"
        android:layout_height="94dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:textColor="#03C988"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtraction" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="207dp"
        android:layout_height="59dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="102dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input1"
        android:textColor="#03C988"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>